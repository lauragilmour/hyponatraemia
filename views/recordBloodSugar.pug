extends layout.pug

block layout-content
  
    div.View.WelcomeView   
      h1.Banner Fluid Monitoring Tool
        h2.BannerSmall Patient H&SC Number - {db.patientHsc}. Patient Name - {db.patientName}. Patient DOB - {db.patientDob}
      h1.BannerWhite 
        div.NavButtons 
          a(href="/")
            div.NavButton Home
          div.NavButtons 
            a(href="/childOrNeonate")
              div.NavButton Child or Neonate
            div.NavButtons 
              a(href="/fluidCalculator")
                div.NavButton Fluid Calculator 
              div.NavButtons 
                a(href="/fluidChoice")
                  div.NavButton Fluid Choice
                div.NavButtons 
                  a(href="/fluidBalance")
                    div.NavButton Fluid Balance
                  div.NavButtons 
                    a(href="/fluidReview")
                      div.NavButton 24Hr Fluid Review
                    div.NavButtons 
                      a(href="/otherAssessments")
                        div.NavButton Other Assessments
                      div.NavButtons 
                        a(href="/recordBloodSugar")
                          div.NavButton Record Blood Sugar      
      
      div.BannerBlue Record Blood Sugar
      div.PageContent
        h3 Record Blood Sugar Level
        div.Whitespace hello
        h2 Blood Sugar Level: 
          input(type="text", name="bloodSugarLevel")
          div.Whitespace hello
        h2 Clinical Comment: 
          select(name='dropdown' id="myselect" size="1" ,onClick="myclick()",style="margin-left:40px" )
            option(value='0') -- Select --
            option(value='1') Result Recorded 
            option(value='2') Low Sugar -: Extra feed given
            option(value='3') Low Sugar -: IVbous and infusion increased
            option(value='4') Low Sugar -: Hypopack taken
            option(value='5') High Sugar -: Insulin given
            option(value='6') High Sugar -: Insulin commenced 
            option(value='7') High Sugar -: Urine check
            option(value='8') High Sugar -:Insulin infusion increased
            option(value='9') Other (please state)
          script.
                function myclick(){ 
                var t=$("#myselect").val().toString();
                $("#zaftot").val(t);
                $("#zaftot").focus();
                $("#myselect").hide();
              };
        div.Whitespace 
        h2 Other: 
          input(type="text", name="clinicalComment")
      div.BannerBlue









